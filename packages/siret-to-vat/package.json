{
  "name": "@adriantombu/siret-to-vat",
  "version": "2.0.8",
  "description": "This small library converts a French SIREN or SIRET to a valid VAT number.",
  "keywords": [
    "siret",
    "vat",
    "tva",
    "siren",
    "validation",
    "tax",
    "taxes",
    "business"
  ],
  "repository": "https://github.com/adriantombu/siret-to-vat",
  "main": "lib/index.js",
  "scripts": {
    "build": "minify ./src/index.js -d ./lib/",
    "lint": "standard ./src/* --verbose | snazzy",
    "lint:fix": "standard --fix",
    "test": "jest --coverage",
    "docker:build": "docker build -t adriantombu/siret-to-vat:dev .",
    "docker:watch": "docker run -v /usr/app/lib -v /usr/app/node_modules -v $(pwd):/usr/app adriantombu/siret-to-vat:dev"
  },
  "author": "Adrian Tombu <adrian@otso.fr> (https://otso.fr)",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "babel-minify": "^0.5.0",
    "husky": "^3.0.4",
    "jest": "^24.5.0",
    "lint-staged": "^9.2.5",
    "snazzy": "^8.0.0",
    "standard": "^14.1.0"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "standard": {
    "globals": [
      "it",
      "expect"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "standard --fix",
      "git add"
    ]
  }
}
