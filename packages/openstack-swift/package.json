{
  "name": "@adriantombu/openstack-swift",
  "version": "0.0.8",
  "description": "A simple wrapper to easily use the Openstack Swift storage provider",
  "keywords": [
    "openstack",
    "swift",
    "files",
    "wrapper",
    "api",
    "storage"
  ],
  "repository": "https://github.com/adriantombu/openstack-swift",
  "main": "lib/index.js",
  "scripts": {
    "lint": "standard ./src/index.js --verbose | snazzy",
    "lint:fix": "standard --fix",
    "build": "yarn lint && minify src -d lib",
    "docker:build": "docker build -t adriantombu/openstack-swift:dev .",
    "docker:watch": "docker run -v /usr/app/lib -v /usr/app/node_modules -v $(pwd):/usr/app adriantombu/openstack-swift:dev"
  },
  "author": "Adrian Tombu <adrian@otso.fr> (https://otso.fr)",
  "license": "MIT",
  "devDependencies": {
    "babel-minify": "^0.5.0",
    "snazzy": "^8.0.0",
    "standard": "^14.1.0"
  },
  "dependencies": {
    "es6-promisify": "^6.0.0",
    "getenv": "^0.7.0",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.5",
    "pkgcloud": "^2.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "standard --fix",
      "git add"
    ]
  }
}
