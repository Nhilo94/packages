{
  "name": "@adriantombu/array-shuffle",
  "version": "2.0.2",
  "description": "A package that... well... shuffles the values of an array. Yup. That's all.",
  "keywords": [
    "array",
    "shuffle",
    "random",
    "arr",
    "sort",
    "rand",
    "no-dependencies",
    "light"
  ],
  "repository": "https://github.com/adriantombu/array-shuffle",
  "main": "lib/index.js",
  "types": "lib/main.d.ts",
  "scripts": {
    "build": "tsc --declaration",
    "test": "jest --coverage",
    "clean": "rimraf ./coverage ./lib",
    "watch": "tsc -p . --watch",
    "watch:test": "jest --watchAll"
  },
  "author": "Adrian Tombu <adrian@otso.fr> (https://otso.fr)",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "husky": "^3.0.4",
    "jest": "^24.5.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "git add"
    ]
  }
}
