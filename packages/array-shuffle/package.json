{
  "name": "@adriantombu/array-shuffle",
  "version": "1.0.6",
  "description": "A package that... well... shuffles the values of an array. Yup. That's all.",
  "keywords": [ "array", "shuffle", "random", "arr", "sort", "rand", "no-dependencies", "light" ],
  "repository": "https://github.com/adriantombu/array-shuffle",
  "main": "lib/index.js",
  "scripts": {
    "build": "minify ./src/index.js -d ./lib/",
    "lint": "standard ./src/* --verbose | snazzy",
    "test": "jest --coverage",
    "docker:build": "docker build -t adriantombu/array-shuffle:dev .",
    "docker:watch": "docker run -v /usr/app/lib -v /usr/app/node_modules -v $(pwd):/usr/app adriantombu/array-shuffle:dev"
  },
  "author": "Adrian Tombu <adrian@otso.fr> (https://otso.fr)",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "babel-minify": "^0.5.0",
    "jest": "^23.6.0",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "standard": {
    "globals": [
      "it",
      "expect"
    ]
  }
}
