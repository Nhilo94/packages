{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2018", "dom"],
    "outDir": "lib",
    "rootDir": "src",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": false,
    "esModuleInterop": true
  }
}
